/* pages/admin/admin.wxss */

/* 定义页面整体样式 */
.admin-page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 定义模块按钮样式 */
.module-button {
  width: 80%; /* 设置按钮宽度 */
  margin: 20rpx 0; /* 设置按钮间距 */
  padding: 20rpx;
  background-color: #007bff;
  border: none;
  border-radius: 10rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}

/* 定义模块标题样式 */
.module-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}
